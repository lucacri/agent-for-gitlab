{
  "name": "claude-gitlab-app",
  "version": "1.0.0",
  "description": "Claude Code GitLab OAuth Application",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node server/dist/server.js",
    "dev": "npm run dev:server",
    "dev:server": "tsx watch server/server.ts",
    "dev:client": "cd client && npm run dev",
    "dev:both": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "typecheck": "tsc --noEmit && cd client && npm run type-check",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "RealMikeChong",
  "license": "MIT"
}