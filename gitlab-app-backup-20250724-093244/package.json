{
  "name": "claude-gitlab-app",
  "version": "1.0.0",
  "description": "Claude Code GitLab OAuth Application",
  "type": "module",
  "main": "server/hono-server.ts",
  "scripts": {
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "start": "bun run server/hono-server.ts",
    "dev": "npm run dev:server",
    "dev:server": "bun --watch server/hono-server.ts",
    "dev:client": "cd client && npm run dev",
    "dev:both": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "typecheck": "bun run typecheck:server && cd client && npm run type-check",
    "typecheck:server": "tsc --noEmit server/hono-server.ts",
    "install:all": "bun install && cd client && npm install",
    "legacy:start": "node server/dist/server.js",
    "legacy:build": "tsc",
    "legacy:dev": "tsx watch server/server.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.17.1",
    "@hono/zod-validator": "^0.7.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "hono": "^4.8.5",
    "hono-sessions": "^0.8.0",
    "winston": "^3.11.0",
    "zod": "^4.0.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "RealMikeChong",
  "license": "MIT"
}